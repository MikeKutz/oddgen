<extension id="trivadis.oddgen.sqldev" version="1.x.x"
	esdk-version="2.0" xmlns="http://jcp.org/jsr/198/extension-manifest">
	<name>oddgen for SQL Developer</name>
	<owner>Philipp Salvisberg - Trivadis</owner>
	<trigger-hooks xmlns="http://xmlns.oracle.com/ide/extension">
		<triggers>
			<dockable-factory-hook xmlns="http://xmlns.oracle.com/ide/extension">
				<factory id="oddgen.NAVIGATOR_WINDOW_VIEW"
					class="trivadis.oddgen.sqldev.OddgenDockableFactory" />
			</dockable-factory-hook>
			<actions xmlns="http://xmlns.oracle.com/jdeveloper/1013/extension">
				<action id="oddgen.SHOW_NAVIGATOR">
					<properties>
						<property name="Name">oddgen</property>
						<property name="SmallIcon">res:/trivadis/oddgen/sqldev/resources/images/oddgen.png
						</property>
						<property name="LongDescription">Dictionary driven Generators</property>
						<property name="Category">View</property>
					</properties>
				</action>
			</actions>
			<controllers xmlns="http://xmlns.oracle.com/ide/extension">
				<controller class="trivadis.oddgen.sqldev.OddgenNavigatorViewController">
					<update-rules>
						<update-rule rule="always-enabled">
							<action id="oddgen.SHOW_NAVIGATOR">
								<label>oddgen</label>
							</action>
						</update-rule>
					</update-rules>
				</controller>
			</controllers>
			<menu-hook xmlns="http://jcp.org/jsr/198/extension-manifest">
				<menus>
					<menubar id="javax.ide.view.MAIN_WINDOW_MENUBAR_ID">
						<menu id="javax.ide.VIEW_MENU_ID">
							<section id="oddgen.NEW_MENU_SECTION_ID">
								<item action-ref="oddgen.SHOW_NAVIGATOR" weight="1000.0" />
							</section>
						</menu>
					</menubar>
				</menus>
			</menu-hook>
			<settings-ui-hook>
				<page id="oddgen.PREFERENCES_PAGE" parent-idref="/preferences">
					<label>oddgen</label>
					<traversable-class>trivadis.oddgen.sqldev.PreferencePanel
					</traversable-class>
				</page>
			</settings-ui-hook>
		</triggers>
	</trigger-hooks>
	<hooks>
		<dockable-hook xmlns="http://xmlns.oracle.com/ide/extension">
			<dockable id="oddgen.NAVIGATOR_WINDOW_VIEW" />
		</dockable-hook>
	</hooks>
</extension>
